/* pages/summary/summary.wxss */

.flex-item {
  width: 95rpx;
  height: 100px;
}

.kcb-item {
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 5px;
}

.top {
  display: flex;
  flex-direction: row;
  margin-left: 35rpx;
}

.top-text {
  width: 100rpx;
  height: 35rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.scroll {
  height: 1170rpx;
  z-index: 101;
  position: fixed;
}

.left {
  width: 35rpx;
  height: 100rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.captext {
  word-break: keep-all;
  word-wrap: break-word;
  font-size: 8pt;
  color: #fff;
}

.captext-padding {
  padding: 3px;
}
